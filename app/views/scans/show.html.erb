<!DOCTYPE html>
<html>
  <head>
    <title>Extracted Text</title>
  </head>
  <body>
    <h2>Extracted Text</h2>
    <div id="extracted-text-container"></div>
    <a href="/scans/new">Take another picture</a>
    <script>
      // JavaScript code to fetch JSON data and display it
      const extractedTextContainer = document.getElementById('extracted-text-container');

      fetch('/scans/1.json') // Replace with your server endpoint
        .then((response) => response.json())
        .then((data) => {
          if (data.extracted_text) {
            extractedTextContainer.textContent = data.extracted_text;
          } else {
            extractedTextContainer.innerHTML = '<p>No text found in the image.</p>';
          }
        })
        .catch((error) => {
          console.error('Error fetching JSON data:', error);
        });
    </script>
  </body>
</html>
